<%- include("partials/header") %>

<h1>Index Page!</h1>

<% posts.forEach(function(post) { %>
    <div>
        <h2><%= post.title %></h2>
        <img src="<%= post.image %>">
        <span><%= post.created.toDateString() %></span>
        <p><%= post.body.substring(0, 100) %>...</p>
        <a href="/posts/<%= post._id %>">Read More</a>
    </div>
<% }); %>

<%- include("partials/footer") %>
